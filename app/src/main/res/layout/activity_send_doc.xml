<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textDirection="rtl"
    android:padding="30dp"
    android:layoutDirection="rtl"
    android:background="@mipmap/reka"
    tools:context=".send_doc">

    <TextView
        android:id="@+id/h"
        android:visibility="gone"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:gravity="right"
        android:textColor="#f0f0f0"
        android:text="על מנת ליהנות מההטבות, יש לשלוח את המסמכים הנדרשים."/>
    <TextView
        android:layout_below="@id/h"
        android:id="@+id/h1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:gravity="right"
        android:visibility="gone"
        android:textColor="#f0f0f0"
        android:text="בקרוב תחלוף שנה מאז הצטרפותך. על מנת להמשיך ליהנות מההטבות, יש לשלוח מסמכים חדשים. המשתמש שלך יחסם כשתעבור שנה, לכן מומלץ לפעול בהקדם."/>
    <TextView
        android:id="@+id/h2"
        android:layout_below="@id/h1"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:textColor="#f0f0f0"
        android:gravity="right"
        android:text="חלפה שנה מאז הצטרפותך. על מנת ליהנות מההטבות, יש לשלוח מסמכים חדשים."/>

    <TextView
        android:layout_below="@+id/h2"
        android:id="@+id/hesber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:textSize="17dp"
        android:textColor="#f0f0f0"
        android:text="אם בתעודת זהות שלך הכתובת היא ק''ש - מספיק להעלות צילום תעודת זהות+ ספח."
        />
    <TextView
        android:layout_below="@+id/hesber"
        android:id="@+id/hesber2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:gravity="right"
        android:textColor="#f0f0f0"
        android:text="אחרת - צריך צילום תעודת זהות וספח+ אישור לימודים/ כרטיס סטודנט+ חוזה שכירות."
    />
    <TextView
        android:layout_below="@+id/hesber2"
        android:id="@+id/hesber3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:textSize="17dp"
        android:gravity="right"
        android:textColor="#f0f0f0"
        android:text="שים/י לב כי לאחר כל תמונה שתעלי/ה מופיע אישור שהתמונה נשמרה, ורק לאחר מכן לחצו שוב על כפתור ההעלאה. אם יש תקלה בהעלאת התמונות, נסו שוב מאוחר יותר.
לסיום לחצ/י על 'סיום'."
        />

    <Button
        android:background="@drawable/but"
        android:shadowColor="#FFFFFF"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginBottom="10dp"
        android:onClick="updoc"
        android:id="@+id/doc"
        android:layout_below="@+id/hesber3"
        android:layout_centerHorizontal="true"
        android:text="    להעלאת המסמכים    " />

    <Button
        android:background="@drawable/but"
        android:shadowColor="#FFFFFF"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginBottom="10dp"
        android:onClick="daleg"
        android:id="@+id/skip"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="     דלג    " />

</RelativeLayout>